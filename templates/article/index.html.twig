{% extends 'base.html.twig' %}

{% block title %}Derniers Articles{% endblock %}

{% block body %}
    <div class="container">
        <h1>Quoi de neuf chez Renty ?</h1>
        <div class="container">
            <div class="row">
                <div class="card-deck mb-3 text-center">
                    {% for article in articles %}

                        <div class="card mb-4 box-shadow">
                            <div class="card-header">
                                <h4 class="my-0 font-weight-normal">
                                    <a href="{{ path('article_show', {'id': article.id}) }}">{{ article.articleTitle}}</a>
                                </h4>
                            </div>
                            <div class="card-body">
                                <a href="{{ path('article_show', {'id': article.id}) }}"><img class="gridimage img-responsive" src="/uploads/pictures_directory/{{article.articlePicture}}" alt="" title=""/></a>
                                <p class="metadata">
                                    post√© le
                                    {{article.articleDate ? article.articleDate|date('d-m-Y') : '' }}
                                    par
                                    {{ article.fkUserId.username }}
                                </p>
                                <p>{{article.articleDescription[:100] ~ '...'}}
                                    <a href="{{ path('article_show', {'id': article.id}) }}">
                                        <button type="button" class="btn btn-lg btn-block btn-primary">Voir la suite...</button>
                                    </a>
                                </div>
                            </div>
                        {% else %}

                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}