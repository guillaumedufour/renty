{% extends 'base.html.twig' %}

{% block title %}Rent{% endblock %}

{% block body %}
    <h1>Rent</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ rent.id }}</td>
            </tr>
            <tr>
                <th>RentTitle</th>
                <td>{{ rent.rentTitle }}</td>
            </tr>
            <tr>
                <th>RentContent</th>
                <td>{{ rent.rentContent }}</td>
            </tr>
            <tr>
                <th>RentDatePost</th>
                <td>{{ rent.rentDatePost ? rent.rentDatePost|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DispoDate</th>
                <td>{{ rent.dispoDate ? rent.dispoDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>MonthCost</th>
                <td>{{ rent.monthCost }}</td>
            </tr>
            <tr>
                <th>RentSurface</th>
                <td>{{ rent.rentSurface }}</td>
            </tr>
            <tr>
                <th>Furnished</th>
                <td>{{ rent.furnished ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('rent_index') }}">back to list</a>

    <a href="{{ path('rent_edit', {'id': rent.id}) }}">edit</a>

    {{ include('rent/_delete_form.html.twig') }}
{% endblock %}