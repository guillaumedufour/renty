{% extends 'base.html.twig' %}

{% block title %}Rent index{% endblock %}

{% block body %}
    <h1>Rent index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>RentTitle</th>
                <th>RentContent</th>
                <th>RentDatePost</th>
                <th>DispoDate</th>
                <th>MonthCost</th>
                <th>RentSurface</th>
                <th>Furnished</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rent in rents %}
            <tr>
                <td>{{ rent.id }}</td>
                <td>{{ rent.rentTitle }}</td>
                <td>{{ rent.rentContent }}</td>
                <td>{{ rent.rentDatePost ? rent.rentDatePost|date('Y-m-d') : '' }}</td>
                <td>{{ rent.dispoDate ? rent.dispoDate|date('Y-m-d') : '' }}</td>
                <td>{{ rent.monthCost }}</td>
                <td>{{ rent.rentSurface }}</td>
                <td>{{ rent.furnished ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('rent_show', {'id': rent.id}) }}">show</a>
                    <a href="{{ path('rent_edit', {'id': rent.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('rent_new') }}">Create new</a>
{% endblock %}